<!-- BOOKSHELF HEADER -->

	<h2><%= local.email %></h2>

	<header>
		<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
		  <div class="carousel-inner">

				<!-- BOOKSHELF -->
		    <div class="carousel-item active">
		      <div class="container-fluid">
			      <div class="row">
			      	<div class="col-md-2"></div>

			      	<!-- BOOKS IN USER'S BOOKSHELF -->
			      	<ul>
								<% for (let i = 0; i < bookshelf.length; i++) { %>
									<li><%= bookshelf[i].title %></li>
									<li><%= bookshelf[i].coverUrl %></li>
								<% } %>
			      	</ul>
							
			      
			        <!-- <div class="col-md-2 col-sm-6 col-xs-12">
			          <button type="button" class="btn icon-btn btn-warning">
									<span class="glyphicon btn-glyphicon glyphicon-minus img-circle text-warning"></span>
								</button>
			          <img data-src="holder.js/100px280/thumb" alt="100%x280" style="height: 30vh; width: 90%; display: block;" src="https://cdn.pastemagazine.com/www/system/images/photo_albums/greatgatsbycovers/large/photo_16696_0.jpeg?1384968217" data-holder-rendered="true">
			        </div> -->



			        <!-- SIGNUP/LOGIN OR LOGOUT BUTTON -->
			        <div class="col-md-2">
			        	<% if (currentUser) { %>
		              <button class="btn btn-primary"> <%=currentUser %> / Logout</button>
		            <% } else { %>
		            	<button class="btn btn-primary">Login / Sign Up</button>
		            <% } %>
							</div>	

						</div>
					</div>
			  </div>

			</div>

			<!-- BOOKSHELF CONTROLS -->
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
		</div>
	</header>