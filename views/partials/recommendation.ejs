<!-- 2 RECOMMENDED BOOKS -->
	<div class>
    <div class="row">

    	<!-- FIRST RECOMMENDED BOOK  -->
      <div class="col-md-5 vertical-center-row">
        <img alt="<%=recommendedBooks[0].title%>" class="recommended-book-img" src="<%=recommendedBooks[0].coverUrl%>" data-holder-rendered="true">
        
				<!-- BOOK NLP DATA -->
        <div class="row">
        	<p>
            <!-- SENTIMENT DATA -->
          	<div class="col-md-4 recommended-book-nlp">
          		<i class="fa fa-meh-o" aria-hidden="true"></i>
          	</div>
            <!-- ADD BOOK TO BOOKSHELF BUTTON -->
          	<div class="col-md-4">
              <form method="post" action="/bookshelf">
                <button type="submit" class="btn icon-btn btn-success">
                  <span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-success">
                    <input type="text" class="invisible" name="bookId" value="<%=recommendedBooks[0]._id%>">    
                  </span>
  							</button>
              </form>
          	</div>
            
            <!-- SHOW THE TOP 5 ENTITIES FROM THE NLP API -->
          	<div class="col-md-4 recommended-book-nlp">
              <ul class="recommended-book-nlp">
                <% for(let i = 0; i < 5; i++) { %>
                  <li class="left-align"> <%=recommendedBooks[0].entities[i]%> </li>
                <% } %>
              </ul>
          	</div>
          </p>
        </div>
      </div>

      <!-- BOOK OF ORIGIN -->
      <div class="col-md-2">
        <img alt="<%=originBook[0].title%>" class="origin-book-img" src="<%=originBook[0].coverUrl%>" data-holder-rendered="true">
        
        <!-- BOOK NLP DATA -->
        <div class="row">
