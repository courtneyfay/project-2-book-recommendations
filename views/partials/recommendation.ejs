          	<div class="col-md-4 origin-book-nlp">
          		<i class="fa fa-meh-o" aria-hidden="true"></i>
          	</div>
          	<div class="col-md-8">
              <!-- SHOW THE TOP 5 ENTITIES FROM THE NLP API -->
              <ul class="origin-book-nlp-list">
                <% for(let i = 0; i < 5; i++) { %>
                  <li class="left-align"> <%=originBook[0].entities[i]%> </li>
                <% } %>
              </ul>
          	</div>
          </p>
        </div>
      </div>

      <!-- SECOND RECOMMENDED BOOK -->
      <div class="col-md-5">
        <img alt="<%=recommendedBooks[1].title%>" class="recommended-book-img" src="<%=recommendedBooks[1].coverUrl%>" data-holder-rendered="true">
        
